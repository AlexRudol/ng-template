{
    "name": "ng-template",
    "version": "0.1.0",
    "description": "New template",
    "config": {
        "protocol": "http",
        "localhost": "localhost",
        "localhost_port": 1111
    },
    "scripts": {
        "clean": "rimraf node_modules dist && npm cache clean",
        "clean:build": "rimraf dist",
        "server": "superstatic --config config/superstatic.json dist/ --gzip",
        "start": "webpack-dev-server --progress --inline --hot --config config/webpack.dev.js",
        "lint": "tslint -c config/tslint.json \"src/app/**/*.ts\"",
        "prebuild": "rimraf dist",
        "build": "webpack --progress --config config/webpack.prod.js"
    },
    "devDependencies": {
        "@angular/platform-server": "~4.4.6",
        "@ngtools/webpack": "~1.7.4",
        "@types/core-js": "~0.9.43",
        "@types/hammerjs": "~2.0.35",
        "@types/node": "~8.0.47",
        "@types/uglify-js": "~2.6.29",
        "@types/webpack": "~3.0.14",
        "angular2-router-loader": "~0.3.5",
        "angular2-template-loader": "~0.6.2",
        "autoprefixer": "~7.1.6",
        "awesome-typescript-loader": "~3.2.3",
        "compression-webpack-plugin": "~1.0.0",
        "copy-webpack-plugin": "~4.2.0",
        "css-loader": "~0.28.7",
        "extract-text-webpack-plugin": "~3.0.0",
        "html-webpack-plugin": "~2.30.1",
        "node-sass": "~4.5.3",
        "postcss-loader": "~2.0.6",
        "postcss-smart-import": "~0.7.5",
        "raw-loader": "~0.5.1",
