        "style-loader": "~0.18.2",
        "superstatic": "~5.0.1",
        "to-string-loader": "~1.1.5",
        "ts-lint": "~4.5.1",
        "typescript": "~2.5.3",
        "webpack": "~3.8.1",
        "webpack-dev-server": "~2.9.3",
        "webpack-merge": "~4.1.0"
